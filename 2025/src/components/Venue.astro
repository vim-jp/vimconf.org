---
import VenueMap from "@/components/VenueMap.astro";
import Card from "./Card.astro";
import { MapPin, Calendar, Clock } from "@lucide/astro";
import Heading from "./Heading.astro";
---

<section id="venue" class="bg-white py-10 md:py-16">
  <div class="container mx-auto px-4">
    <Heading> 会場 </Heading>
    <div class="grid items-center gap-6 md:grid-cols-2">
      <Card>
        <div class="p-4">
          <h3 class="mb-3 text-lg font-semibold md:text-xl">
            アキバプラザ・アキバホール
          </h3>
          <div class="space-y-3">
            <div class="flex items-start gap-2">
              <MapPin class="mt-0.5 h-4 w-4 flex-shrink-0 text-emerald-600" />
              <p class="text-sm md:text-base">東京都千代田区神田練塀町3</p>
            </div>
            <div class="flex items-start gap-2">
              <Calendar class="mt-0.5 h-4 w-4 flex-shrink-0 text-emerald-600" />
              <p class="text-sm md:text-base">2025年11月2日(日)</p>
            </div>
            <div class="flex items-start gap-2">
              <Clock class="mt-0.5 h-4 w-4 flex-shrink-0 text-emerald-600" />
              <p class="text-sm md:text-base">
                9:30 - 17:30 (懇親会 17:30 ~ 19:30)
              </p>
            </div>
          </div>
        </div>
      </Card>
      <div class="h-64 overflow-hidden rounded-lg bg-gray-200 md:h-80">
        <VenueMap />
      </div>
    </div>
  </div>
</section>
